<?xml version="1.0" encoding="UTF-8"?>
<Layout
  xmlns="urn:speedata.de:2009/publisher/en"
  xmlns:sd="urn:speedata:2009/publisher/functions/en">
  <Options show-grid="yes"/>

  <Record element="data">
    <SetVariable variable="img" select="'ocean.pdf'"></SetVariable>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>With clip="no" (default) and maxwidth and maxheight</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>maxwidth="5" maxheight="5"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Image maxwidth="5" maxheight="5" file="{$img}" clip="no"/>
    </PlaceObject>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>maxwidth="10" maxheight="5"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Image maxwidth="10" maxheight="5" file="{$img}" clip="no"/>
    </PlaceObject>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>maxwidth="5" maxheight="10"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Image maxwidth="5" maxheight="10" file="{$img}" clip="no"/>
    </PlaceObject>
    <NewPage/>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>With clip="no"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>width="5" height="5"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Image width="5" height="5" file="{$img}" clip="no"/>
    </PlaceObject>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>width="10" height="5"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Image width="10" height="5" file="{$img}" clip="no"/>
    </PlaceObject>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>width="5" height="10"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Image width="5" height="10" file="{$img}" clip="no"/>
    </PlaceObject>
    <NewPage/>

    <PlaceObject>
      <Textblock>
        <Paragraph><Value>With clip="yes"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>width="5" height="5"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Image width="5" height="5" file="{$img}" clip="yes"/>
    </PlaceObject>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>width="10" height="5"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Image width="10" height="5" file="{$img}" clip="yes"/>
    </PlaceObject>
    <PlaceObject>
      <Textblock>
        <Paragraph><Value>width="5" height="10"</Value></Paragraph>
      </Textblock>
    </PlaceObject>
    <PlaceObject>
      <Image width="5" height="10" file="{$img}" clip="yes"/>
    </PlaceObject>


  </Record>

</Layout>