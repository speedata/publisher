        <Rule direction="horizontal" length="10"/>
      </PlaceObject>
      <PlaceObject rotate="80" origin-x="center" origin-y="bottom" column="2" row="10">
        <Box width="4" height="2" backgroundcolor="blue"/>
      </PlaceObject>

      <NewPage/>
      <PlaceObject>
        <Textblock><Paragraph><Value>center, center</Value></Paragraph></Textblock>
      </PlaceObject>
      <PlaceObject column="4">
        <Rule direction="vertical" length="15"/>
      </PlaceObject>
      <PlaceObject row="3" column="1">
        <Rule direction="horizontal" length="10"/>
      </PlaceObject>
      <PlaceObject rotate="-30" origin-x="center" origin-y="center" column="2" row="2">
        <Box width="4" height="2" backgroundcolor="red"/>
      </PlaceObject>


      <PlaceObject row="6" column="1">
        <Rule direction="horizontal" length="10"/>
      </PlaceObject>
      <PlaceObject rotate="30" origin-x="center" origin-y="center" column="2" row="5">
        <Box width="4" height="2" backgroundcolor="green"/>
      </PlaceObject>


      <PlaceObject row="11" column="1">
        <Rule direction="horizontal" length="10"/>
      </PlaceObject>
      <PlaceObject rotate="80" origin-x="center" origin-y="center" column="2" row="10">
        <Box width="4" height="2" backgroundcolor="blue"/>
      </PlaceObject>

      <NewPage/>
      <PlaceObject>
        <Textblock><Paragraph><Value>center, top</Value></Paragraph></Textblock>
      </PlaceObject>
      <PlaceObject column="4">
        <Rule direction="vertical" length="15"/>
      </PlaceObject>
      <PlaceObject row="2" column="1">
        <Rule direction="horizontal" length="10"/>
      </PlaceObject>
      <PlaceObject rotate="-30" origin-x="center" origin-y="top" column="2" row="2">
        <Box width="4" height="2" backgroundcolor="red"/>
      </PlaceObject>


      <PlaceObject row="5" column="1">
        <Rule direction="horizontal" length="10"/>
      </PlaceObject>
      <PlaceObject rotate="30" origin-x="center" origin-y="top" column="2" row="5">
        <Box width="4" height="2" backgroundcolor="green"/>
      </PlaceObject>


      <PlaceObject row="10" column="1">
        <Rule direction="horizontal" length="10"/>
      </PlaceObject>
      <PlaceObject rotate="80" origin-x="center" origin-y="top" column="2" row="10">
        <Box width="4" height="2" backgroundcolor="blue"/>
      </PlaceObject>


    <NewPage/>

    <PlaceObject>
      <Textblock><Paragraph><Value>right, bottom</Value></Paragraph></Textblock>
    </PlaceObject>
    <PlaceObject column="6">
      <Rule direction="vertical" length="15"/>
    </PlaceObject>
    <PlaceObject row="4" column="1">
      <Rule direction="horizontal" length="10"/>
    </PlaceObject>
    <PlaceObject rotate="-30" origin-x="right" origin-y="bottom" column="2" row="2">
      <Box width="4" height="2" backgroundcolor="red"/>
    </PlaceObject>


    <PlaceObject row="7" column="1">
      <Rule direction="horizontal" length="10"/>
    </PlaceObject>
    <PlaceObject rotate="30" origin-x="right" origin-y="bottom" column="2" row="5">
      <Box width="4" height="2" backgroundcolor="green"/>
    </PlaceObject>


    <PlaceObject row="12" column="1">
      <Rule direction="horizontal" length="10"/>
    </PlaceObject>
    <PlaceObject rotate="80" origin-x="right" origin-y="bottom" column="2" row="10">
      <Box width="4" height="2" backgroundcolor="blue"/>
    </PlaceObject>

    <NewPage/>
    <PlaceObject>
      <Textblock><Paragraph><Value>right, center</Value></Paragraph></Textblock>
    </PlaceObject>
    <PlaceObject column="6">
      <Rule direction="vertical" length="15"/>
    </PlaceObject>
    <PlaceObject row="3" column="1">
      <Rule direction="horizontal" length="10"/>
    </PlaceObject>
    <PlaceObject rotate="-30" origin-x="right" origin-y="center" column="2" row="2">
      <Box width="4" height="2" backgroundcolor="red"/>
    </PlaceObject>


    <PlaceObject row="6" column="1">
      <Rule direction="horizontal" length="10"/>
    </PlaceObject>
    <PlaceObject rotate="30" origin-x="right" origin-y="center" column="2" row="5">
      <Box width="4" height="2" backgroundcolor="green"/>
    </PlaceObject>


    <PlaceObject row="11" column="1">
      <Rule direction="horizontal" length="10"/>
    </PlaceObject>
    <PlaceObject rotate="80" origin-x="right" origin-y="center" column="2" row="10">
      <Box width="4" height="2" backgroundcolor="blue"/>
    </PlaceObject>

    <NewPage/>
    <PlaceObject>
      <Textblock><Paragraph><Value>right, top</Value></Paragraph></Textblock>
    </PlaceObject>
    <PlaceObject column="6">
      <Rule direction="vertical" length="15"/>
    </PlaceObject>
    <PlaceObject row="2" column="1">
      <Rule direction="horizontal" length="10"/>
    </PlaceObject>
    <PlaceObject rotate="-30" origin-x="right" origin-y="top" column="2" row="2">
      <Box width="4" height="2" backgroundcolor="red"/>
    </PlaceObject>


    <PlaceObject row="5" column="1">
      <Rule direction="horizontal" length="10"/>
    </PlaceObject>
    <PlaceObject rotate="30" origin-x="right" origin-y="top" column="2" row="5">
      <Box width="4" height="2" backgroundcolor="green"/>
    </PlaceObject>


    <PlaceObject row="10" column="1">
      <Rule direction="horizontal" length="10"/>
    </PlaceObject>
    <PlaceObject rotate="80" origin-x="right" origin-y="top" column="2" row="10">
      <Box width="4" height="2" backgroundcolor="blue"/>
    </PlaceObject>

    </Record>

</Layout>